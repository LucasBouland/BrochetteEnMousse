@model CardViewModel
@{
    //Utilisation : @await Html.PartialAsync("_CardPartial", new CardViewModel { Columns = 6, Content = "test" })
}
<div class="col-md-@Model.Columns mb-4">
    <!--Card-->
    <div class="card">
        <!-- Card header -->
        <div class="card-header d-sm-flex justify-content-between"><div class="mb-2 mb-sm-0 pt-1">@Model.Title</div> <div class="d-flex justify-content-center">@Model.Author</div></div>
        <!--Card content-->
        <div class="card-body desc-wrap">
            @Html.Raw(Model.Content)
        </div>
        <div class="open-link" style="display: block;">
            <a href="#">Expand Full Description</a>
        </div>
        <!--/.Card-->
    </div>